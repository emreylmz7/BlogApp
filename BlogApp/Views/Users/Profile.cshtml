@model User

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="profile-picture-container text-center">
                <img src="/img/@Model.Image" class="img-fluid rounded-circle profile-picture" alt="Profile Picture">
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-info-container">
                <h2 class="profile-name text-center">@Model.Name</h2>
                <hr>
                <div id="posts">
                    <h4 class="my-4">Published Posts</h4>
                    @* <div class="list-group">
                        @foreach(var post in Model.Posts)
                        {
                            <a href="/posts/details/@post.Url" class="list-group-item list-group-item-action">
                                <i class="bi bi-bookmark"></i> @post.Title  <button class="btn btn-sm btn-primary mx-5">Edit</button>
                            </a>
                            
                        }
                    </div> *@
                    <div class="list-group">
                        @foreach(var post in Model.Posts)
                        {
                            <a href="/posts/details/@post.Url" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-bookmark"></i> @post.Title
                                </div> 
                            </a>
                        }
                    </div>

                </div>
                <div id="comments">
                    <h4 class="my-4">Comments</h4>
                    <ul class="list-group">
                        @foreach(var comment in Model.Comments)
                        {
                            <li class="list-group-item"><i class="bi bi-chat-left-text"></i> @comment.CommentText  <a href="/posts/details/@comment.Post.Url"><i><u>[@comment.Post.Title]</u></i></a> </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


